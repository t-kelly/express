{%- if section.settings.show_product_recommendations -%}
  {%- if recommendations.performed -%}
    {%- if recommendations.products_count > 0 -%}
      <div data-product-recommendations>
        {%- if section.settings.heading != blank -%}
          <h2 class="product-recommendations__heading">{{ section.settings.heading | escape }}</h2>
        {%- endif -%}

        <ul class="featured-collections__products" role="list">
          {%- for product in recommendations.products -%}
            <li class="featured-collections__item">
              {% render 'product-card-list', product: product, show_form: section.settings.quick_add %}
            </li>
          {%- endfor -%}
        </ul>
      </div>
    {%- endif -%}
  {%- else  -%}
    <div class="product-recommendations"
        data-section-id="{{ section.id }}"
        data-section-type="product-recommendations"
        product-recommendations-container
        data-base-url="{{ routes.product_recommendations_url }}"
        data-product-id="{{ product.id }}"
        {% if settings.show_product_modal %} data-product-modal="true"{% endif %}
        {% if section.settings.quick_add %} data-quick-add="true"{% endif %}
    >
    </div>
  {%- endif -%}
{%- endif -%}

